guard 'coffeescript', :input => 'js/coffeescript', :output => 'js/compiled'
guard 'sass', :input => 'css/scss', :output => 'css', :style => :compressed

guard :concat, type: "js", files: %w(nope), input_dir: "js/compiled", output: "js/scripts"

guard 'uglify', :destination_file => "js/scripts.js" do
  watch (%r{js/scripts.js})
end

guard 'livereload' do
  watch(%r{.+\.(css|html|js)$})
end
